@model DataAnimals.DTO.Login.RegisterRequestDTO;
<form asp-controller="Account" asp-action="RegisterUser" method="post">
    <div class="form-group">
        <label class="text-white" asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label class="text-white" asp-for="Password"></label>
        <input id="floatingPassword" asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label class="text-white">Select Roles:</label><br />
        @foreach (var role in ViewBag.Roles)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input " type="checkbox" name="Roles" value="@role" checked />
                <label class="form-check-label text-white">@role</label>
            </div>
        }
    </div>
    <div class="form-check mt-2">
        <input class="form-check-input text-white" type="checkbox" value="" id="showPassword" onclick="togglePassword()">
        <label class="form-check-label text-white" for="showPassword">
            Show Password
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Đăng Ký</button>
</form>
<script>
    function togglePassword() {
        var passwordField = document.getElementById("floatingPassword");
        var showPasswordCheckbox = document.getElementById("showPassword");

        if (showPasswordCheckbox.checked) {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }
</script>