<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<style>
    .logout-card {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: #343a40;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        color: white;
    }
    .logout-button {
        background-color: #dc3545;
        border-color: #dc3545;
        width: 100%;
    }
    .logout-button:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
</style>

<div class="logout-card text-center">
    <label class="h5 mb-4">Are you sure you want to log out?</label>
    <form asp-action="LogoutSuccess" method="post">
        <button type="submit" class="btn logout-button">Logout</button>
    </form>
</div>