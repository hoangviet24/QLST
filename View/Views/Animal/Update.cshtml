@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DataAnimals.DTO.Animal.AnimalDto

<h1 class="text-white">Thêm dữ liệu</h1>
<div>
    <form asp-controller="Animal" asp-action="UpdateAnimal" asp-route-id="@Model.ID" method="post">
        <div class="form-group">
            <label class="text-white" for="name">Name:</label>
            <input type="text" class="form-control" id="Name"  placeholder="@Model.Name"  asp-for="Name">
        </div>
        <div class="form-group">
            <label class="text-white" for="description">Description:</label>
            <textarea class="form-control" id="Description" rows="3" placeholder="Description"  asp-for="Description"  ></textarea>
        </div>
        <div class="form-group">
            <label for="ageAvg" class="text-white">Average Age:</label>
            <input type="number" class="form-control" id="AgeAvg" placeholder="AgeAvg" asp-for="AgeAvg">
        </div>
        <div class="form-group">
            <label class="text-white" for="ageAvg">File Id:</label>
            <input type="text" class="form-control" id="Url" placeholder="Url" asp-for="Url"/>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-upload"></i></button>
    </form>
</div>
