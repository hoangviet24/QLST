@model IEnumerable<DataAnimals.DTO.Animal.AnimalDto>


    <h1>Danh sách động vật</h1>
<form asp-controller="Animal" asp-action="Index" method="GET" class="animal-search-form d-flex flex-wrap justify-content-between align-items-center mb-3">
    <div class="search-input-container col-md-6">
        <label for="filterQuery" class="form-label">Tìm kiếm:</label>
        <div class="input-group">
            <input type="text" name="filterQuery" id="filterQuery" class="form-control" placeholder="Tên...">
            <button type="submit" class="btn btn-primary search-btn">Tìm kiếm</button>
        </div>
        <div class="input-group">
            <label class="lable lable-">Sắp xếp: &nbsp;</label>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="isAccess" name="isAccess" value="False" checked class="custom-control-input">
                <label for="isAccess" class="custom-control-label">Tăng dần&nbsp;</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="isAccess" name="isAccess" value="True" class="custom-control-input">
                <label for="isAccess" class="custom-control-label">Giảm dần</label>
            </div>
        </div>
    </div>
    <a href="@Url.Action("Create", "Animal")" class="btn btn-success mt-2 add-animal-btn">Thêm động vật mới</a>
</form>


@if (Model != null)
{
    <form asp-controller="Animal" asp-action="Index" method="GET" class="animal-search-form d-flex flex-wrap justify-content-between align-items-center mb-3">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Tên</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
            <th scope="col">Detail</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><a class="btn btn-primary" asp-controller="Animal" asp-action="Update" asp-route-id="@item.ID">Update</a></td>
                <td><a class="btn btn-danger" asp-controller="Animal" asp-action="Delete" asp-route-id="@item.ID">Delete</a></td>
                <td><a class="btn btn-info"asp-controller="Animal" asp-action="Detail" asp-route-id="@item.ID">Detail</a></td>
            </tr>
        }
        </tbody>
    </table>
    </form>
}
else
{
    <h1>Không có dữ liệu</h1>
}