@model DataAnimals.Models.Contact

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Chi tiết liên hệ</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        Thông tin liên hệ
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-5">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <a asp-action="Index" class="btn btn-secondary">Quay về danh sách</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background-color: #f8f9fa; /* Màu nền nhẹ cho toàn trang */
    }
    h1 {
        color: #343a40; /* Màu đậm cho tiêu đề */
    }
    .card {
        margin: auto;
        max-width: 600px; /* Giới hạn độ rộng của thẻ card */
        border: none; /* Bỏ viền mặc định */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ */
    }
    .card-header {
        font-size: 1.25rem; /* Tăng kích thước font cho tiêu đề */
    }
    .card-body dt {
        font-weight: bold; /* In đậm tên thuộc tính */
    }
</style>