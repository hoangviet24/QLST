<div class="accordion accordion-flush mt-4" id="accordionFlushExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                Gửi thành công
            </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
                <a asp-controller="Animal" asp-action="Index" class="btn btn-info btn-sm d-block mb-2">Quay về</a>
                <a asp-controller="Contacts" asp-action="Create" class="btn btn-success btn-sm d-block">Tiếp tục</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .accordion-button {
        background-color: #f8f9fa; /* Màu nền nhẹ cho nút accordion */
        color: #343a40; /* Màu chữ đậm cho nút accordion */
        border: 1px solid #dee2e6; /* Viền nhạt */
    }
    .accordion-button:hover {
        background-color: #e2e6ea; /* Màu nền khi hover */
    }
    .accordion-body {
        padding: 1rem; /* Thêm padding cho accordion body */
    }
    .btn-info {
        background-color: #17a2b8; /* Màu xanh nhạt cho nút 'Quay về' */
        border-color: #17a2b8;
    }
    .btn-success {
        background-color: #28a745; /* Màu xanh lá cho nút 'Tiếp tục' */
        border-color: #28a745;
    }
</style>