@model DataAnimals.Models.Contact

@{
    ViewData["Title"] = "Delete";
}

<div class="card bg-dark text-white">
    <div class="card-header bg-primary">
        <h5 class="mb-0">Delete Contact</h5>
    </div>
    <div class="card-body">
        <h6 class="card-title">Are you sure you want to delete this contact?</h6>
        <dl class="row text-white">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            
            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
            
            <dt class="col-sm-3">Phone Number:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-default text-white">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background-color: #343a40; /* Đổi nền thành màu đen */
    }

    .card {
        margin: auto;
        max-width: 600px;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 1.25rem;
    }

    .card-body dt {
        font-weight: bold;
    }
</style>