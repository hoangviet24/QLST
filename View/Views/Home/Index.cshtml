@using View.Controllers
@model IEnumerable< DataAnimals.DTO.Animal.AnimalDto>
@{
    var list = ViewBag.ListAnimal;
    int count = 1;
    int countMax = 1;
    foreach (var it in list)
    {
        count++;
        countMax++;
    }

    int i =0;
    int a = count / 5;
    float b = (float)count / 5;
    if (b > a)
    {
        a++;
    }
}
@if (Model.Count() > 0)
{
    <div class="container text-center">
        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-4">
                    <div class="card">
                        <img src="@item.Url" width="100px"  class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Tên: @item.Name</h5>
                            <p class="card-text">Tiêu đề: @StringHelpers.TruncateAtWord(item.Description, 50)</p>
                            <p class="card-text">Tuổi: @item.AgeAvg</p>
                            <a asp-controller="Animal" asp-action="Detail" asp-route-id="@item.ID" class="btn btn-primary">Detail</a>
                        </div>
                    </div>
                </div>
            }
<hr/>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @for (i = 1; i <= a; i++)
                    {
                        <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Index" id="page" asp-route-page="@i">@i</a></li>
                    }
                </ul>
            </nav>

        </div>
    </div>
}
else
{
    <h1 class="text-white">Hiện trang này chưa chứa động vật</h1>
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" asp-controller="Home" asp-action="Index" id="page" asp-route-page="@(i-1)" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (i = 1; i <= a; i++)
        {
            <li class="page-item"><a class="page-link" asp-controller="Home" asp-action="Index" id="page" asp-route-page="@i">@i</a></li>
        }
        <li class="page-item">
            <a class="page-link" asp-controller="Home" asp-action="Index" id="page" asp-route-page="@(i+1)" aria-label="Previous">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
}